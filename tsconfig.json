{
  "compilerOptions": {
    "baseUrl": ".",

    "jsx": "react",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true,

    "strict": true,
    "noImplicitReturns": true,

    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
